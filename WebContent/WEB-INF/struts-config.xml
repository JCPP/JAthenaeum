<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<!-- User -->
		<form-bean name="registerform" type="com.github.jcpp.jathenaeum.beans.UserRegisterForm"/>
		<form-bean name="signinform" type="com.github.jcpp.jathenaeum.beans.SigninForm"/>
		
		<!-- Author -->
		<form-bean name="authorForm" type="com.github.jcpp.jathenaeum.beans.AuthorForm"/>
		
		<!-- Book -->
		<form-bean name="bookForm" type="com.github.jcpp.jathenaeum.beans.BookForm"/>
		
		<!-- Customer -->
		<form-bean name="customerForm" type="com.github.jcpp.jathenaeum.beans.CustomerForm"/>
		
		<!-- Loan -->
		<form-bean name="loanForm" type="com.github.jcpp.jathenaeum.beans.LoanForm"/>
	</form-beans>
	
	<global-forwards>
		<forward name="index" path="/index.do" />
	</global-forwards>
	
	<action-mappings>
		<action path="/index" type="com.github.jcpp.jathenaeum.actions.IndexAction" parameter="page.index" />
		
		<!-- User -->
		<action path="/signup" type="org.apache.struts.actions.ForwardAction" parameter="page.signup" />
		<action
	        path="/doRegister"
	        type="com.github.jcpp.jathenaeum.actions.UserRegisterAction"
	        name="registerform"
	        scope="request"
	        validate="true"
	        input="/signup.do"
	        cancellable="true">
	        <forward name="success" path="page.confirmRegistration"/>
	        <forward name="failed" path="page.failedRegistration"/>
        </action>
        
        <action path="/signin" type="org.apache.struts.actions.ForwardAction" parameter="page.signin" />
        <action
	        path="/doSignin"
	        type="com.github.jcpp.jathenaeum.actions.SigninAction"
	        name="signinform"
	        scope="request"
	        validate="true"
	        input="/signin.do"
	        cancellable="true">
	        <forward name="success" path="page.confirmSignin"/>
	        <forward name="failed" path="page.failedSignin"/>
        </action>
        
        <action path="/logout" type="com.github.jcpp.jathenaeum.actions.LogoutAction" parameter="page.logout">
	        <forward name="success" path="page.confirmLogout"/>
	        <forward name="failed" path="page.failedLogout"/>
        </action>
        
        
        
        <!-- Author -->
        <action path="/author" type="com.github.jcpp.jathenaeum.actions.AuthorAction" parameter="op">
        	<forward name="add" path="page.addAuthor"/>
        	<forward name="edit" path="page.editAuthor"/>
        	<forward name="delete" path="page.deleteAuthor"/>
        	<forward name="viewAll" path="page.viewAllAuthors"/>
        	<forward name="search" path="page.searchAuthors"/>
        </action>
        
        <!-- Author Operations -->
        <action
	        path="/doAuthor"
	        type="com.github.jcpp.jathenaeum.actions.AuthorActionDo"
	        name="authorForm"
	        scope="request"
	        validate="false"
	        parameter="op">
	        <!-- Add -->
	        <forward name="addErrors" path="/author.do?op=add" redirect="true"/>
	        <forward name="addSuccess" path="page.confirmAuthorInsert"/>
	        <forward name="addFailed" path="page.failedAuthorInsert"/>
	        
	        <!-- Edit -->
	        <forward name="editErrors" path="/author.do?op=edit" redirect="true"/>
	        <forward name="editSuccess" path="page.confirmAuthorEdit" />
	        <forward name="editFailed" path="page.failedAuthorEdit" />
	        
	        <!-- Delete -->
	        <forward name="deleteErrors" path="/author.do?op=delete" redirect="true"/>
	        <forward name="deleteSuccess" path="page.confirmAuthorDelete" />
	        <forward name="deleteFailed" path="page.failedAuthorDelete" />
	        
	        <!-- Search -->
	        <forward name="search" path="/author.do?op=search" redirect="true"/>
        </action>
        
        
        
        <!-- Book -->
        <action path="/book" type="com.github.jcpp.jathenaeum.actions.BookAction" parameter="op">
        	<forward name="add" path="page.addBook"/>
        	<forward name="edit" path="page.editBook"/>
        	<forward name="delete" path="page.deleteBook"/>
        	<forward name="viewAll" path="page.viewAllBooks"/>
        	<forward name="search" path="page.searchBooks"/>
        	<forward name="manageCopies" path="page.manageBookCopies"/>
        	<forward name="noAuthors" path="page.noAuthors" />
        </action>
        
        <!-- Book Operations -->
        <action
	        path="/doBook"
	        type="com.github.jcpp.jathenaeum.actions.BookActionDo"
	        name="bookForm"
	        scope="request"
	        validate="false"
	        parameter="op">
	        <!-- Add -->
	        <forward name="addErrors" path="/book.do?op=add" redirect="true"/>
	        <forward name="addSuccess" path="page.confirmBookInsert"/>
	        <forward name="addFailed" path="page.failedBookInsert"/>
	        
	        <!-- Edit -->
	        <forward name="editErrors" path="/book.do?op=edit" redirect="true"/>
	        <forward name="editSuccess" path="page.confirmBookEdit" />
	        <forward name="editFailed" path="page.failedBookEdit" />
	        
	        <!-- Delete -->
	        <forward name="deleteErrors" path="/book.do?op=delete" redirect="true"/>
	        <forward name="deleteSuccess" path="page.confirmBookDelete" />
	        <forward name="deleteFailed" path="page.failedBookDelete" />
	        
	        <!-- Search -->
	        <forward name="search" path="/book.do?op=search" redirect="true"/>
	        
	        <!-- Manage Copies -->
	        <forward name="manageCopiesErrors" path="/book.do?op=manageCopies" redirect="true"/>
	        <forward name="manageCopiesSuccess" path="page.confirmManageBookCopies" />
	        <forward name="manageCopiesFailed" path="page.failedManageBookCopies" />
        </action>
        
        
        
        <!-- Customer -->
        <action path="/customer" type="com.github.jcpp.jathenaeum.actions.CustomerAction" parameter="op">
        	<forward name="add" path="page.addCustomer"/>
        	<forward name="edit" path="page.editCustomer"/>
        	<forward name="delete" path="page.deleteCustomer"/>
        	<forward name="viewAll" path="page.viewAllCustomers"/>
        </action>
        
        <!-- Customer Operations -->
        <action
	        path="/doCustomer"
	        type="com.github.jcpp.jathenaeum.actions.CustomerActionDo"
	        name="customerForm"
	        scope="request"
	        validate="false"
	        parameter="op">
	        <!-- Add -->
	        <forward name="addErrors" path="/customer.do?op=add" redirect="true"/>
	        <forward name="addSuccess" path="page.confirmCustomerInsert"/>
	        <forward name="addFailed" path="page.failedCustomerInsert"/>
	        
	        <!-- Edit -->
	        <forward name="editErrors" path="/customer.do?op=edit" redirect="true"/>
	        <forward name="editSuccess" path="page.confirmCustomerEdit" />
	        <forward name="editFailed" path="page.failedCustomerEdit" />
	        
	        <!-- Delete -->
	        <forward name="deleteErrors" path="/customer.do?op=delete" redirect="true"/>
	        <forward name="deleteSuccess" path="page.confirmCustomerDelete" />
	        <forward name="deleteFailed" path="page.failedCustomerDelete" />
        </action>
        
        
        <!-- Loan -->
        <action path="/loan" type="com.github.jcpp.jathenaeum.actions.LoanAction" parameter="op">
        	<forward name="add" path="page.addLoan"/>
        	<forward name="edit" path="page.editLoan"/>
        	<forward name="delete" path="page.deleteLoan"/>
        	<forward name="viewAll" path="page.viewAllLoans"/>
        	<forward name="search" path="page.searchLoans"/>
        	<forward name="noBooks" path="page.noBooks" />
        	<forward name="noCopies" path="page.noCopies" />
        	<forward name="noCustomers" path="page.noCustomers" />
        </action>
        
        <!-- Loan Operations -->
        <action
	        path="/doLoan"
	        type="com.github.jcpp.jathenaeum.actions.LoanActionDo"
	        name="loanForm"
	        scope="request"
	        validate="false"
	        parameter="op">
	        <!-- Add -->
	        <forward name="addErrors" path="/loan.do?op=add" redirect="true"/>
	        <forward name="addSuccess" path="page.confirmLoanInsert"/>
	        <forward name="addFailed" path="page.failedLoanInsert"/>
	        
	        <!-- Edit -->
	        <forward name="editErrors" path="/loan.do?op=edit" redirect="true"/>
	        <forward name="editSuccess" path="page.confirmLoanEdit" />
	        <forward name="editFailed" path="page.failedLoanEdit" />
	        
	        <!-- Delete -->
	        <forward name="deleteErrors" path="/loan.do?op=delete" redirect="true"/>
	        <forward name="deleteSuccess" path="page.confirmLoanDelete" />
	        <forward name="deleteFailed" path="page.failedLoanDelete" />
	        
	        <!-- Search -->
	        <forward name="search" path="/loan.do?op=search" redirect="true"/>
        </action>
        
	</action-mappings>
	
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" />
	
	<message-resources parameter="com.github.jcpp.jathenaeum.resources.MessageResources" />
	
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>

</struts-config>