<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="registerform" type="com.github.jcpp.jathenaeum.beans.UserRegisterForm"/>
		<form-bean name="newAuthorForm" type="com.github.jcpp.jathenaeum.beans.NewAuthorForm"/>
	</form-beans>
	
	<global-forwards>
		<forward name="index" path="/index.do" />
	</global-forwards>
	
	<action-mappings>
		<action path="/index" type="org.apache.struts.actions.ForwardAction" parameter="page.index" />
		<action path="/signin" type="org.apache.struts.actions.ForwardAction" parameter="page.signin" />
		<action path="/signup" type="org.apache.struts.actions.ForwardAction" parameter="page.signup" />
		<action path="/newAuthor" type="org.apache.struts.actions.ForwardAction" parameter="page.newAuthor" />
		<action
	        path="/doRegister"
	        type="com.github.jcpp.jathenaeum.actions.UserRegisterAction"
	        name="registerform"
	        scope="request"
	        validate="true"
	        input="/signup.do"
	        cancellable="true">
	        <forward name="success" path="page.confirmRegistration"/>
	        <forward name="failed" path="page.failedRegistration"/>
        </action>
      	<action
	        path="/doNewAuthor"
	        type="com.github.jcpp.jathenaeum.actions.NewAuthorAction"
	        name="newAuthorForm"
	        scope="request"
	        validate="true"
	        input="/newAuthor.jsp">
	        <forward name="success" path="page.confirmInsert"/>
	        <forward name="failed" path="page.failedInsert"/>
        </action>
	</action-mappings>
	
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" />
	
	<message-resources parameter="com.github.jcpp.jathenaeum.resources.MessageResources" />
	
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>

</struts-config>