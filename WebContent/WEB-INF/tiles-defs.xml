<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
"http://struts.apache.org/dtds/tiles-config_1_3.dtd">
<tiles-definitions>
	<!-- Base Tiles Definition -->
	<definition name="base.definition" path="/layout/siteLayout.jsp">
		<put name="header" value="/layout/header.jsp" />
		<put name="navigation" value="/navigation.do" />
		<put name="footer" value="/layout/footer.jsp" />
	</definition>


	<!-- Base Tiles Bootstrap Definition -->
	<definition name="base.definition.bootstrap" path="/layout/bootstrap-layout.jsp">
		<put name="style" value="/css/style.css" />
		<put name="jumbotronEnabled" value="false" />
		<put name="navbarEnabled" value="true" />
		<put name="footerEnabled" value="true" />
		<put name="redirect" value="" />
		<put name="head" value="/layout/bootstrap-head.jsp" />
		<put name="jumbotron" value="/layout/bootstrap-jumbotron.jsp" />
		<put name="navbar" value="/layout/bootstrap-navbar.jsp" />
		<put name="footer" value="/layout/bootstrap-footer.jsp" />
	</definition>


	<!-- Index page -->
	<definition name="page.index" extends="base.definition.bootstrap">
		<put name="jumbotronEnabled" value="true" />
		<put name="title" value="Home - JAthenaeum" />
		<put name="body" value="/layout/index.jsp" />
	</definition>
	
	

	<!-- Sign in page -->
	<definition name="page.signin" extends="base.definition.bootstrap">
		<put name="title" value="Signin - JAthenaeum" />
		<put name="body" value="/layout/user/signin.jsp" />
		<put name="style" value="css/signin.css" />
	</definition>
	
	<!-- Failed sign in -->
	<definition name="page.failedSignin" extends="base.definition.bootstrap">
		<put name="title" value="Failed Sign In - JAthenaeum" />
		<put name="body" value="/layout/user/failedSignin.jsp" />
	</definition>
	
	<!-- Confirm sign in -->
	<definition name="page.confirmSignin" extends="base.definition.bootstrap">
		<put name="redirect" value="index.do" />
		<put name="title" value="Confirm Sign In - JAthenaeum" />
		<put name="body" value="/layout/user/confirmSignin.jsp" />
	</definition>
	
	
	
	<!-- Sign up page -->
	<definition name="page.signup" extends="base.definition.bootstrap">
		<put name="title" value="Signup - JAthenaeum" />
		<put name="body" value="/layout/user/signup.jsp" />
		<put name="style" value="css/signup.css" />
	</definition>
	
	<!-- Failed registration -->
	<definition name="page.failedRegistration" extends="base.definition.bootstrap">
		<put name="title" value="Failed Registration - JAthenaeum" />
		<put name="body" value="/layout/user/failedRegistration.jsp" />
	</definition>
	
	<!-- Confirm registration -->
	<definition name="page.confirmRegistration" extends="base.definition.bootstrap">
		<put name="redirect" value="index.do" />
		<put name="title" value="Confirm Registration - JAthenaeum" />
		<put name="body" value="/layout/user/confirmRegistration.jsp" />
	</definition>
	
	
	
	<!-- Add Author -->
	<definition name="page.addAuthor" extends="base.definition.bootstrap">
		<put name="title" value="Add Author - JAthenaeum" />
		<put name="body" value="/layout/author/addAuthor.jsp" />
		<put name="style" value="css/signup.css" />
	</definition>
	
	<!-- Confirm insert -->
	<definition name="page.confirmAuthorInsert" extends="base.definition.bootstrap">
		<put name="redirect" value="index.do" />
		<put name="title" value="Confirm Insert Author - JAthenaeum" />
		<put name="body" value="/layout/author/confirmAuthorInsert.jsp" />
		<put name="style" value="css/signup.css" />
	</definition>
	
	<!-- Failed insert -->
	<definition name="page.failedAuthorInsert" extends="base.definition.bootstrap">
		<put name="redirect" value="index.do" />
		<put name="title" value="Failed Insert Author - JAthenaeum" />
		<put name="body" value="/layout/author/failedAuthorInsert.jsp" />
		<put name="style" value="css/signup.css" />
	</definition>
</tiles-definitions>